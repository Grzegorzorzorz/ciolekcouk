<!doctype html>
<html lang="en">
  <head>
    <%- head %>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <%- include("partials/icons") %>
  </head>
  <body>
    <%- include("partials/header") %> <% if (locals.nav === true) { %>
    <div class="drawer md:drawer-open">
      <input id="nav-drawer" type="checkbox" class="drawer-toggle" />
      <div
        class="drawer-side z-50 min-h-fit h-screen md:z-0 md:top-16 md:h-[calc(100svh-4rem)]"
      >
        <label
          for="nav-drawer"
          aria-label="close sidebar"
          class="drawer-overlay print:hidden"
        ></label>
        <aside
          class="bg-base-100 overflow-y-auto min-h-fit h-screen min-w-72 md:overflow-y-visible md:z-10 md:min-h-0 md:min-w-56 md:h-fit"
        >
          <div>
            <%- include("partials/nav") %>
            <div
              class="bg-base-100 pointer-events-none sticky bottom-0 flex h-20 [mask-image:linear-gradient(transparent,#000000)]"
            ></div>
          </div>
        </aside>
      </div>
      <div
        class="drawer-content border-base-300 md:border-x p-0 m-0 w-full max-w-4xl min-h-[calc(100svh-4rem)]"
      >
        <main class="pt-8"><%- body %></main>
      </div>
    </div>
    <% } else { %>
    <main><%- body %></main>
    <% } %> <%- include("partials/footer") %>
  </body>
</html>
